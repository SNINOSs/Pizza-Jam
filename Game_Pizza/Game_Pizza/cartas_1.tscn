script/source = "extends CanvasLayer

var foi = 0
var direita = 0
var meio = 0
var esquerda = 0
func _ready():
	visible = false
	Global.pausar_tudo = false
	direita = int(randf_range(1, 10))
	meio = int(randf_range(1, 10))
	esquerda = int(randf_range(1, 10))
func _process(delta):
	visible = Global.visible_cartas

		
		
	
	
	if direita <= 4:
		$\"BoxContainer/3\".visible = true
		$\"BoxContainer/3/Button3\".visible = true
		$\"BoxContainer/6\".visible = false
		$\"BoxContainer/6/Button6\".visible = false
	if direita >= 5:
		$\"BoxContainer/3\".visible = false
		$\"BoxContainer/3/Button3\".visible = false
		$\"BoxContainer/6\".visible = true
		$\"BoxContainer/6/Button6\".visible = true
		
	if meio <= 4:
		$\"BoxContainer/2\".visible = true
		$\"BoxContainer/2/Button2\".visible = true
		$\"BoxContainer/5\".visible = false
		$\"BoxContainer/5/Button5\".visible = false
	if meio >= 5:
		$\"BoxContainer/2\".visible = false
		$\"BoxContainer/2/Button2\".visible = false
		$\"BoxContainer/5\".visible = true
		$\"BoxContainer/5/Button5\".visible = true
		
	if esquerda <= 4:
		$\"BoxContainer/1\".visible = true
		$\"BoxContainer/1/Button1\".visible = true
		$\"BoxContainer/4\".visible = false
		$\"BoxContainer/4/Button4\".visible = false
	if esquerda >= 5:
		$\"BoxContainer/1\".visible = false
		$\"BoxContainer/1/Button1\".visible = false
		$\"BoxContainer/4\".visible = true
		$\"BoxContainer/4/Button4\".visible = true
func _on_button_1_pressed():
	Global.visible_cartas = false
	Global.pausar_tudo = false
	Global.iniciar_jogo = true
	Global.reset_timer = true

func _on_button_2_pressed():
	Global.visible_cartas = false
	Global.pausar_tudo = false
	Global.iniciar_jogo = true
	Global.reset_timer = true



func _on_button_3_pressed():
	Global.player_vida_max += 20
	Global.player_vida += 20
	Global.visible_cartas = false
	Global.pausar_tudo = false
	Global.iniciar_jogo = true
	Global.reset_timer = true
	
	
	
func _on_button_4_pressed():
	Global.arma_giro_nivel += 1
	Global.visible_cartas = false
	Global.pausar_tudo = false
	Global.iniciar_jogo = true
	Global.reset_timer = true


func _on_button_5_pressed():
