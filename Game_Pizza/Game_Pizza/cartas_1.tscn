		$carta3.visible = true
		$carta4.visible = false
		$carta3/Button_c3.disabled = false
		$carta4/Button4.disabled = true
	if direita >= 5:
		$carta3.visible = false
		$carta4.visible = true
		$carta3/Button_c3.disabled = true
		$carta4/Button4.disabled = false
	
	
func _on_button_c_1_pressed():
	Global.tempo_tiro = null
	visible = false
	Global.pausar_tudo = false
	Global.numero_inimigos = 0





func _on_button_c_2_pressed():
	Global.habilitar_choque = false
	if Global.habilitar_choque == false:
		Global.areachoque_scaleX += 1
		Global.areachoque_scaleY += 1
	visible = false
	Global.pausar_tudo = false
	Global.numero_inimigos = 0


func _on_button_c_3_pressed():
	if direita <= 4:
		Global.player_vida_max += 20
		Global.player_vida += 20
		visible = false
		Global.pausar_tudo = false
		Global.numero_inimigos = 0



func _on_button_4_pressed():
	if direita >= 5:
		Global.arma_giro_nivel += 1
		visible = false
		Global.pausar_tudo = false
		Global.numero_inimigos = 0
